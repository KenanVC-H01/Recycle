@page
@model Recycle.Pages.Entries.CreateModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <title>Enter Recycle Data</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    <h2>Enter Recycle Data</h2>
    <form method="post">
        <div class="form-group">
            <label for="ItemNo">ItemNo</label>
            <input type="text" id="ItemNo" name="itemno" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Category">Category</label>
            <input type="text" id="Category" name="category" class="form-control" />
        </div>
        <div class="form-group">
            <label for="ItemName">ItemName</label>
            <input type="text" id="ItemName" name="itemname" class="form-control" />
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/Entries/EntryForm" class="btn btn-secondary">Cancel</a>
    </form>
</body>
</html>